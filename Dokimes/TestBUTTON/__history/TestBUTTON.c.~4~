void main()
{
   set_tris_b(0x00); // Ορίζουμε τη θύρα B σαν ΕΞΟΔΟ (0)
   set_tris_d(0x00); // Ορίζουμε τη θύρα D σαν ΕΙΣΟΔΟ(1)
   PORTB = 0;   
   while(TRUE) {
      if (bit_test(PORTD, 0)
         output_high(PIN_B0);
      else
         output_low(PIN_B0);
   }
}


