#include <main_.h>
#use standard_io(A)
#use standard_io(B)
#use standard_io(C)
#byte PORTA=0xF80
#byte PORTB=0xF81
#byte PORTC=0xF82
#byte PORTD=0xF83
#byte PORTE=0xF84

void main()
{
   set_tris_b(0xff); // Ορίζουμε τη θύρα B σαν ΕΙΣΟΔΟ (1)
   set_tris_d(0x00); // Ορίζουμε τη θύρα D σαν ΕΞΟΔΟ (0)
   while(1) {
      int a;
      int epwnymo = 7;
      a = PORTB;
      set_tris_d(a);
      PORTD = 6 * epwnymo;
      //delay_ms(5000);
   }
}
