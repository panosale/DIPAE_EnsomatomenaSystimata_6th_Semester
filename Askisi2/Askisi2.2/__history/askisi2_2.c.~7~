#include <main_.h>

#use standard_io ( A )
#use standard_io ( B )
#use standard_io ( C )
#byte PORTA =0xF80
#byte PORTB =0xF81
#byte PORTC =0xF82
#byte PORTD =0xF83
#byte PORTE =0xF84

void main()
{
   set_tris_b(0x00); // Ορίζουμε τη θύρα B σαν ΕΞΟΔΟ (0)
   set_tris_d(0xff); // Ορίζουμε τη θύρα D σαν ΕΙΣΟΔΟ (1)
//   int1 pin7, pin6, pin5, pin4 = 0; 
   int8 portb = 0b11110000;
   int8 i;
   while(TRUE) {
//      pin7 = input(PIN_B7);      
//      pin6 = input(PIN_B6);      
//      pin5 = input(PIN_B5);      
//      pin4 = input(PIN_B4);      
      portb = portb && input_b();
      for (i = 0; i < portb; i++) {
         output_high(PIN_D0);
         delay_ms(200);
         output_low(PIN_D0);
         delay_ms(200);

         output_high(PIN_D1);
         delay_ms(200);
         output_low(PIN_D1);
         delay_ms(200);

         output_high(PIN_D2);
         delay_ms(200);
         output_low(PIN_D2);
         delay_ms(200);

         output_high(PIN_D3);
         delay_ms(200);
         output_low(PIN_D3);
         delay_ms(200);

         output_high(PIN_D4);
         delay_ms(200);
         output_low(PIN_D4);
         delay_ms(200);

         output_high(PIN_D5);
         delay_ms(200);
         output_low(PIN_D5);
         delay_ms(200);

         output_high(PIN_D6);
         delay_ms(200);
         output_low(PIN_D6);
         delay_ms(200);

         output_high(PIN_D7);
         delay_ms(200);
         output_low(PIN_D7);
         delay_ms(200);
      }
   }
}



